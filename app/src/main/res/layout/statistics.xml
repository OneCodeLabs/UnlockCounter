<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
    >

    <!--
        Very primitive design for the statistics view. Note that all the hardcoded values are there
        because this is only temporary and important changes will have to be made to this file in
        the near future.
    -->

    <TextView
        android:id="@+id/statistics_average"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        />

    <com.unlockchecker.unlockchecker.ui.BarChart
        android:id="@+id/statistics_bar_chart"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />

</FrameLayout>
